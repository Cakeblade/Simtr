{
  "name": "simtr",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config build/vite.config.ts",
    "dev:electron": "npm run build:vite && electron .",
    "preview": "vite preview --config build/vite.config.ts",
    "build:vite": "vite build --config build/vite.config.ts",
    "build:electron": "electron-builder --config build/electron-builder.json5",
    "build": "npm run build:vite && npm run build:electron",
    "clean": "rimraf build/output",
    "type-check": "vue-tsc --noEmit --project build/tsconfig.json && tsc --noEmit -p electron",
    "lint": "eslint . --ext .ts,.vue --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "marked": "^15.0.7",
    "vue": "^3.4.21",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.17",
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.9",
    "rimraf": "^3.0.2",
    "typescript": "^5.8.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.26"
  },
  "build": {
    "appId": "com.example.simtr",
    "productName": "Simtr",
    "directories": {
      "output": "build/output/release",
      "buildResources": "build"
    },
    "files": [
      "build/output/electron/main.js",
      "build/output/electron/preload.mjs",
      "build/output/web/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "main": "build/output/electron/main.js"
}
